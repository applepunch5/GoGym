<main class="px-3">
  <div class="background-image-container">
    <%= render "shared/flash_message" %>
    <div class="row justify-content-center ms-5">
      <h2 class="col-md-12 text-center mb-3" style="font-weight: 900;"><%= t('top.index.text')%></h2>
      <div class="col-md-3">
        <input type="text" class="form-control" placeholder="エリア・駅">
      </div>
      <div class="col-md-3">
        <input type="text" class="form-control" placeholder="キーワード">
      </div>
      <div class="col-md-2">
        <button type="button" class="btn btn-primary btn-success"><%= t('top.index.search')%></button>
      </div>
    </div>
    <%= render "shared/footer" %>
  </div>
</main>

<style>
.background-image-container {
  background-image: url('<%= asset_path('fitness_center.jpg') %>');
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  padding-top: 80px; /* ヘッダーの下に余白を追加 */
  padding-bottom: 10px; /* フッターの上に余白を追加 */
  height: calc(100vh - 50px); /* 画面全体の高さから上下の余白を引く */
</style>
