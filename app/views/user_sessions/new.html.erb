<% content_for(:title, t(".login")) %>
<% breadcrumb :user_session %>
<%= render "shared/flash_message" %>
<div class="container">
  <div class="row position-relative position-absolute top-50 start-50 translate-middle">
    <h1 class="d-flex justify-content-center"><%= t('.login') %></h1>
    <div class="col-md-12 mx-auto">
      <%= form_with model: @user do |f| %>
        <div class="mb-3">
          <%= f.label :email, t('.email'), class: "form-label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, t('.password'), class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="d-grid gap-2 col-4 mx-auto">
          <%= f.submit t('.login'), class: "btn btn-success",data: { disable_with: t('.login') } %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%# <%= link_to "Login with Google", auth_at_provider_path('google') %>
      </div>
    </div>
  </div>
</div>
