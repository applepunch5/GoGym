<% content_for(:title, "#{@gym.name}") %>
<div class="wrapper">
  <div class="d-flex flex-column mx-auto align-items-center">
    <h1 class="text-center" style="padding: 0 250px;"><%= @gym.name %></h1>
    <div class="btn-group" style="max-width: 800px;">
      <%= link_to '店舗情報', gym_path(@gym), class: "btn btn-outline-success border-1", style: "width: 200px;" %>
      <button type="button" class="btn btn-outline-success border-1" style="width: 200px;" data-url="#">写真</button>
      <button type="button" class="btn btn-outline-success border-1" style="width: 200px;" data-url="#">口コミ一覧</button>
      <% if logged_in? %>
        <%= link_to '口コミ投稿', new_gym_review_path(@gym), class: "btn btn-outline-success border-1", style: "width: 200px;" %>
      <% end %>
    </div>
    <div class="card mt-4 border border-black">
      <div class="d-flex justify-content-between align-items-center mb-2 mt-2">
        <span style="margin-left: 10px;">評価</span>
        <span style="margin-right: 10px;">投稿日 <%= Time.zone.now.strftime("%Y/%m/%d") %></span>
      </div>
      <ul class="list-group list-group-flush">
        <%= form_with model: [@gym, @review], local: true do |f| %>
          <div class="mb-2" style="border-bottom: 1px solid black;">
            <%= f.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
          </div>
          <div class="mb-2" style="border-bottom: 1px solid black;">
            <%= f.text_area :content, class: "form-control border-0", style: "height: 200px;", placeholder: "口コミ本文を入力してください（100文字）" %>
          </div>
          <div class="mb-2">
            <%= f.label :photos, "写真を追加してください", class: "form-label", style: "margin-left: 10px;" %>
            <%= f.file_field :photos, class: "form-control" %>
            <%= f.hidden_field :photos_cache %>
          </div>
          <div class="d-flex justify-content-center mb-2">
            <%= f.submit "投稿", class: "btn btn-success" %>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<style>
  .wrapper {
    margin-top: 50px;
    margin-bottom: 50px;
  }

  .card {
    max-width: 600px;
    width: 100%; /* カードを画面幅いっぱいに広げる */
    max-height: 600px; /* カードの高さを固定 */
  }

  @media (max-width: 768px) {
    .card {
      height: auto; /* 画面幅が768px以下の場合、カードの高さを自動調整する */
    }
  }
</style>
